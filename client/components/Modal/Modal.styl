@require 'nib'
@require '../../css/imports/colors'
@require '../../css/mixins/fonts'

.modal.component
  transition: all .5s
  fixed: top 25% right 25% bottom 25% left 25%
  background: white
  padding: 10px
  z-index: 9
  box-shadow: 0 0 3px #cdcdcd
  .close
    font-rodus()
    absolute: top 10px right 10px
    height: 45px
    width: 45px
    z-index: 2
    font-size: 30px
    opacity: .5
    text-align: center
    &:hover
      opacity: 1
