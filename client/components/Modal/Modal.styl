@require 'nib'
@require '../../css/imports/colors'
@require '../../css/mixins/fonts'

.modal.component
  transition: all .5s
  fixed: top 25% right 25% left 25%
  background: white
  padding: 5%
  z-index: 9
  box-shadow: 0 0 5px rgba(10, 10, 10, .4)
  .close
    font-rodus()
    absolute: top 10px right 10px
    height: 45px
    width: 45px
    z-index: 2
    font-size: 30px
    opacity: .5
    text-align: center
    &:hover
      opacity: 1
@media all and (max-width: 900px)
  .modal.component
    fixed: top 20% right 5% left 5%
