@import '../../css/imports/colors'

.sidebar
  width: 20%
  //max-width: 200px
  height: 90vh
  background: duskBlue
  display: inline-block
  margin: 0
  vertical-align: top
  .header
    width: 100%
    height: 75px
    background: rgba(160, 60, 60, 1)
  ul
    text-align: center
    li
      list-style: none
      font-size: 18px
      height: 50px
      padding: 18px
      border-left: 5px solid transparent
      color: whiteShade
      &.active
        background: duskBlueDark
        border-left: 5px solid blue
        color: white
      &.alert
        background: duskBlueDark
        border-left: 5px solid red
        color: white

