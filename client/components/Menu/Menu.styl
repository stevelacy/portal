@require 'nib'

.component.menu
  fixed: top -3.5% left -100% bottom -3%
  // background: rgba(26, 188, 166, .8)
  background: rgba(250, 250, 250, .8)
  width: 30vw
  display: flex
  justify-content: center
  align-items: center
  z-index: 8
  box-shadow: 0 0 10px #cdcdcd
  transition: all .2s
  transform: scale(1.25)
  &.animation-close
    left: -30%
  &.animation-open
    left: -13%

  .header
    absolute: top left right
    height: 25%
    background: #262626
    display: flex
    justify-content: center
    align-items: center
    .user
      text-align: center
      width: 80%
      .image
        display: inline-block
      .name
        width: 100%
        height: 50px
        margin-top: 2%
        text-align: center
        font-size: 40px
        color: #fff
  .close
    absolute: top 15px left 15px
    z-index: 2
    width: 70px
    height: 70px
    cursor: pointer
    font-size: 60px
    text-align: center
    color: #fff

  .items
    .item
      list-style: none
      padding: 10px
      color: #171717
      font-size: 40px
      border-bottom: 3px solid rgba(0, 0, 0, 0)
      transition: all .3s
      cursor: pointer
      &:hover
        border-bottom: 3px solid #171717
@media all and (max-width: 1000px)
  .component.menu
    width: 105vw
    fixed: top -3% left -4% bottom -3%
    &.animation-open
      left: -3%
