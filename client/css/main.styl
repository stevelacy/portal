@require './imports/reset'
@require './mixins/fonts'
@require './imports/colors'


body
  font-rodus()
  background: #cdcdcd
  min-height: 100vh
  font-size: 1em

a
  text-decoration: none
  &:hover
    color: greyBlack

.main
  width: 100vw
  min-height: 100vh
  background: whiteTrans
  .page
    margin: auto
    .content
      display: inline-block
      width: 100%

@require './imports/extras'
@require './imports/inputs'



::-webkit-scrollbar
  width: 10px

::-webkit-scrollbar-track
  background: #efefef
  -webkit-box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.1)

::-webkit-scrollbar-track:hover
  background: #dedede

::-webkit-scrollbar-thumb
  background: #CCC
  -webkit-box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.2)
  border-radius: 1px

::-webkit-scrollbar-thumb:hover
  background: #AAA

::-webkit-scrollbar-thumb:active
  background: #888
-webkit-box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.3)

::selection
  background:#000
  color:#fff
