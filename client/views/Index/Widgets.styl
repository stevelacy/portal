@require 'nib'

.widgets.view
  width: 100%
  max-width: 1000px
  display: flex
  justify-content: space-around
  flex-wrap: wrap
  .widget
    transition: all .3s
    position: relative
    min-width: 300px
    margin-top: 2%
    box-shadow: 0 1px 2px #cdcdcd
    background: white
    border-radius: 3px
    overflow: hidden
    .controls
      width: 100%
      text-align: left
      padding: 15px
      background: rgba(250, 250, 250, .2)
      .close
        absolute: top right

      .close, .minimize
        font-rodus()
        height: 30px
        width: 30px
        z-index: 2
        font-size: 20px
        opacity: .2
        padding: 4px
        text-align: center
        box-shadow: none
        &:hover
          opacity: 1

      .minimize
        absolute: top right 25px

    iframe
      height: 400px
      width: 100%
      border: none
      overflow: hidden
      margin: 0
      padding: 0
      border-radius: 3px

  @media all and (max-width: 500px)
    .widget
      width: 50vw

