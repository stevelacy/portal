@require '../../css/imports/colors'
@require '../../css/imports/buttons'
@require '../../css/mixins/aligns'
@require '../../css/mixins/background'
@require '../../css/mixins/trans'
@require '../../css/mixins/fonts'

.login.view
  position: relative
  min-height: 100vh
  background: #000 url('/img/dot.png')
  .page
    text-align: center
    .box
      center()
      trans-background(10, 10, 10, .8)
      width: 80%
      max-width: 500px
      max-width: 800px
      padding: 10vh
      margin-top: 15vh
      transition: all .5s
      input
        text-align: center
        width: 50%
        margin: 5px
        padding: 15px
        color: white
      .logo
        font-trench()
        width: 90%
        margin: 5%
        font-size: 60px
      .status
        height: 15px
        color: red

  @media all and (max-width: 900px)
    .page
      .box
        padding: 5vh
        input
          width: 90%
  @media all and (max-width: 500px)
    .page
      .box
        padding: 2vh
        width: 95%
        input
          width: 95%
