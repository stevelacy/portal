@import 'nib'
.widgets
  width: 100%
  display: inline-block
  .widget
    transition: all .3s
    margin: 1% 0 0 1%
    display: block
    float: left
    position: relative
    min-width: 250px
    box-shadow: 0 0 2px #cdcdcd
    background: white
    border-radius: 5px
    overflow: hidden
    .controls
      width: 100%
      text-align: left
      padding: 10px
      background: rgba(250, 250, 250, .2)
      .close
        absolute: top right

      .close, .minimize
        font-rodus()
        height: 30px
        width: 30px
        z-index: 2
        font-size: 20px
        opacity: .2
        padding: 4px
        text-align: center
        box-shadow: none
        &:hover
          opacity: 1

      .minimize
        absolute: top right 25px

    iframe
      height: 400px
      width: 100%
      border: none
      overflow: hidden
      margin: 0
      padding: 0
      border-radius: 3px
