@import 'nib'
.widgets
  width: 95%
  display: inline-block
  .widget
    margin: 1%
    display: block
    float: left
    position: relative
    min-width: 250px
    box-shadow: 0 0 2px #cdcdcd
    background: white
    .controls
      width: 100%
      text-align: left
      padding: 10px
      background: rgba(250, 250, 250, .5)
    .close
      font-rodus()
      absolute: top right
      height: 30px
      width: 30px
      z-index: 2
      font-size: 26px
      opacity: .2
      padding: 4px
      text-align: center
      &:hover
        opacity: 1

    iframe
      height: 400px
      width: 100%
      border: none
      overflow: hidden
      margin: 0
      padding: 0
      border-radius: 3px
